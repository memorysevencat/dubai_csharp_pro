@model IEnumerable<DuBai_Pro.Dubai_Editor>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>

    <title>GetAllEditor</title>
    <style type="text/css">
        .table {
        width:700px;
        text-align:center
        }
    </style>
</head>
<body>
    <p>
        @Html.ActionLink("新增", "Editor")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.CheckBox("chk", false)
            </th>
            <th>
               标题
            </th>
            <th>
               摘要
            </th>
            <th>
               类型
            </th>
            <th>
               时间
            </th>
           
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.CheckBox("chk1", false,new { id=item.EditorID})
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.ArticleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseTime)
            </td>
            <td>
                @Html.ActionLink("编辑", "Change", new { id=item.EditorID }) |
                @Html.ActionLink("详细", "Details", new { id=item.EditorID }) |
                @Html.ActionLink("删除", "Delete", new { id=item.EditorID })
            </td>
        </tr>
    }
    
    </table>

    
    <script type="text/javascript">
        var checklist=$("input[name='chk1']");
        $("#chk").click(function () {
            checklist.prop("checked", $(this).prop("checked"))
        })
    </script>
</body>
</html>
